{
  "name": "enl/amqp-workers",
  "homepage": "https://github.com/enl/amqpworkers",
  "type": "library",
  "description": "This library provides more object-oriented way to create amqp workers and producers",
  "keywords": ["workers", "amqp", "rabbitmq"],
  "license": "MIT License",
  "authors": [
    {
      "name": "Alex Panshin",
      "email": "deadyaga@gmail.com",
      "homepage": "http://alex-panshin.me",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "~5.6|~7.0",
    "php-amqplib/php-amqplib": "^2.6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.4",
    "mockery/mockery": "~0.9",
    "scrutinizer/ocular": "~1.1",
    "squizlabs/php_codesniffer": "~2.3"
  },
  "autoload": {
    "psr-4": {
      "AmqpWorkers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AmqpWorkers\\Tests\\": "tests/"
    }
  } ,
  "scripts": {
    "test": "phpunit",
    "format": "phpcbf --standard=psr2 src/"
  },
  "config": {
    "vendor-dir": "vendor"
  }
}
